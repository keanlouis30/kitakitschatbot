# Facebook Messenger Configuration
PAGE_ACCESS_TOKEN=your_facebook_page_access_token_here
VERIFY_TOKEN=your_webhook_verify_token_here
APP_SECRET=your_facebook_app_secret_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (optional, defaults to local SQLite)
DB_PATH=./chatbot.db

# OCR Configuration (optional)
OCR_LANGUAGE=eng
OCR_CONFIDENCE_THRESHOLD=75

# Google Gemini Configuration
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key_here
OCR_PROVIDER=gemini

# Analytics Configuration
ANALYTICS_API_KEY=your_analytics_api_key_here
ENABLE_ANALYTICS=true

# Security
SESSION_SECRET=generate_random_session_secret_here
ENCRYPTION_KEY=generate_random_encryption_key_here

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_OCR_PER_USER_PER_DAY=100

# Debug Mode
DEBUG=false
LOG_LEVEL=info
